<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_layout"
    android:background="@drawable/default_bg"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:10"
        android:id="@+id/timeTextView"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:layout_marginTop="30sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fri, May 6"
        android:id="@+id/dateTextView"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="****"
        android:id="@+id/pinTextView"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter PIN"
        android:id="@+id/enterPinTextView"
        android:layout_gravity="center_horizontal" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="269dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:alpha="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:alpha="1">


            <ImageButton android:id="@+id/buttonOne"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:background="@drawable/one"
                android:layout_column="0"
                android:alpha="1" />

            <ImageButton
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/buttonTwo"
                android:background="@drawable/two"
                android:layout_column="1"
                android:alpha="1" />

            <ImageButton
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/buttonThree"
                android:background="@drawable/three"
                android:layout_column="2"
                android:alpha="1" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:alpha="1">

            <ImageButton
                android:id="@+id/buttonFour"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:background="@drawable/four"
                android:layout_column="0"
                android:alpha="1" />

            <ImageButton
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/buttonFive"
                android:background="@drawable/five"
                android:layout_column="1"
                android:alpha="1"
                />

            <ImageButton
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/buttonSix"
                android:background="@drawable/six"
                android:layout_column="2"
                android:alpha="1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:alpha="1">

            <ImageButton android:id="@+id/buttonSeven"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:background="@drawable/seven"
                android:layout_column="0"
                android:alpha="1" />

            <ImageButton
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/buttonEight"
                android:background="@drawable/eight"
                android:layout_column="1"
                android:alpha="1" />

            <ImageButton
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/buttonNine"
                android:background="@drawable/nine"
                android:layout_column="2"
                android:alpha="1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:alpha="1">

            <ImageButton
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/buttonBack"
                android:layout_column="0"
                android:background="@drawable/back"
                android:alpha="1" />

            <ImageButton
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/buttonZero"
                android:background="@drawable/zero"
                android:layout_column="1"
                android:alpha="1" />

            <ImageButton
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:id="@+id/buttonOK"
                android:background="@drawable/ok"
                android:layout_column="2"
                android:alpha="1" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/ic_secure"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swipe"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />


</LinearLayout>